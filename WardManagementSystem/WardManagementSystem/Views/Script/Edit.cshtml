@model WardManagementSystem.Data.Models.Domain.Script
@{
    Layout = "~/Views/Shared/_LayoutDoctor.cshtml";
}
@{
    ViewData["Title"] = "Edit";
}
<style>
    .card {
        margin-bottom: 20px;
    }

    .card-title {
        font-size: 1.5rem;
    }

    .button-container button {
        margin-right: 10px;
        margin-bottom: 10px;
    }

    body {
        background-image: url('/snake_icon.png');
        /* background-size: cover; */
        background-repeat: no-repeat;
        background-position: right;
    }
    /* .container {
        display: flex;
        align-items: center;
        padding: 20px;
        background-image: url('~/snake_icon.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        height: 100vh;
    } */

    a {
        color: white;
        text-decoration: none;
    }

    a:hover{
        color: white;
    }
</style>
<h1>Patient Script Medication</h1>

<button type="button" class="btn btn-primary btn-sm"><a asp-action="Add">Create New Script</a></button>
<button type="button" class="btn btn-primary btn-sm"><a asp-action="DisplayAll">View All Patient Scripts</a></button>

<br />
<hr />


<body>
    <form asp-action="Edit">
        <div class="container">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Edit Script</h2>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <label asp-for="ScriptID" class="control-label"></label>
                                <input asp-for="ScriptID" class="form-control" readonly />
                                <span asp-validation-for="ScriptID" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Medication Name</label>
                                    @Html.DropDownList("MedicationID", (SelectList)@ViewBag.MedicationList, "-select-", htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Dosage" class="control-label"></label>
                                <input asp-for="Dosage" class="form-control" required/>
                                <span asp-validation-for="Dosage" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-4"></div>
                            <div class="col-md-4">
                                <div class="button-container">
                                    <input type="submit" value="Edit" class="btn btn-primary" />
                                </div>
                            </div>
                            <div class="col-md-4"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
