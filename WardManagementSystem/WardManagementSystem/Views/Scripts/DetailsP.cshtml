@model WardManagementSystem.Data.Models.ScriptDetailsViewModel
@{
    Layout = "~/Views/Shared/_LayoutScripts.cshtml";
}
@if (Model != null)
{
    <h1>Script Details</h1>
    <section>
        <strong><label>Script ID:</label></strong>
        <span>@Model.ScriptID</span>
        <strong><label>Doctor:</label></strong>
        <span>@Model.FirstName</span>
        <strong><label>Date:</label></strong>
        <span>@Model.Date.ToString("yyyy-MM-dd")</span>
    </section>
    <hr />
    <h3>Patient Name:</h3>
    <p>@Model.PatientName</p>
    <h3>Status:</h3>
    <p>@Model.Status</p>
    <h3>Medication:</h3>
    <p>@Model.medicationName @Model.Dosage mg</p>
    <hr />
    <br />

    <button class="btn btn-outline-primary" onclick="window.open('@Url.Action("PrintScript", "Scripts", new { id = Model.ScriptID })', '_blank')">Print</button>

}
else
{
    <h1>Model Failed to Load</h1>
}