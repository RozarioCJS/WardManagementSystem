@model WardManagementSystem.Data.Models.ScriptDetailsViewModel
@{
    Layout = "~/Views/Shared/_LayoutScripts.cshtml";
}
@if (Model != null)
{
    <style>
        .card {
            margin-bottom: 20px;
        }

        .card-title {
            font-size: 1.5rem;
        }

        .button-container button {
            margin-right: 10px;
        }

        .container {
            display: flex;
            align-items: center;
            padding: 20px;
            background-image: url('~/snake_icon.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            height: 90vh;
        }
    </style>
    <div class="container">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Script Details</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="FirstName">Doctor:</label>
                                <input asp-for="FirstName" type="text" class="form-control" id="Doctor" value="@Model.FirstName" readonly>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Date">Date:</label>
                                <input asp-for="Date" type="text" class="form-control" id="Date" value="@Model.Date.ToString("yyyy-MM-dd")" readonly>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="PatientName">Patient Name:</label>
                                <input asp-for="PatientName" type="text" class="form-control" id="PatientName" value="@Model.PatientName" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Status">Status:</label>
                                <input asp-for="Status" type="text" class="form-control" id="Status" value="@Model.Status" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="medicationName">Medication:</label>
                                <input asp-for="medicationName" type="text" class="form-control" id="Medication" value="@Model.medicationName @Model.Dosage mg" readonly>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="button-container">
                                <form asp-action="SendScript" method="post">
                                    <input type="hidden" name="Id" value="@Model.ScriptID" />
                                    <button class="btn btn-outline-primary" id="ShowCustomAlert" type="submit">Send</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h1>Failed to load Model</h1>
}