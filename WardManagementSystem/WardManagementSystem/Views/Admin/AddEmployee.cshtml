@model WardManagementSystem.Data.Models.ViewModels.UserViewModel
@{
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}
<style>
    .card {
        margin-bottom: 20px;
    }

    .card-title {
        font-size: 1.5rem;
    }

    .button-container button {
        margin-right: 10px;
        margin-bottom: 10px;
    }

    .container {
        display: flex;
        align-items: center;
        padding: 20px;
        background-image: url('~/snake_icon.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        height: 100vh;
    }
</style>
<body>
    <h2>Create User</h2>

    <form asp-action="AddEmployee" method="post">
        <div class="container">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Employee Details</h2>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="UserName"></label>
                                    <input asp-for="UserName" class="form-control" required />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" type="password" class="form-control" required />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="FirstName"></label>
                                        <input asp-for="FirstName" type="text" class="form-control" required />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="LastName"></label>
                                        <input asp-for="LastName" type="text" class="form-control" required />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="ContactNumber"></label>
                                        <input asp-for="ContactNumber" type="text" class="form-control" required />
                                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Email"></label>
                                        <input asp-for="Email" type="text" class="form-control" required />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Address1"></label>
                                        <input asp-for="Address1" type="text" class="form-control" required />
                                        <span asp-validation-for="Address1" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label asp-for="Address2"></label>
                                        <input asp-for="Address2" type="text" class="form-control" required />
                                        <span asp-validation-for="Address2" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <hr />

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Role"></label>
                                    <select asp-for="Role" class="form-control">
                                        <option value="">Select a role</option>
                                        @foreach (var role in ViewBag.Roles as List<string>)
                                        {
                                            <option value="@role">@role</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="button-container">
                                <button type="submit" class="btn btn-primary">Add</button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>