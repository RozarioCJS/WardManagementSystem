@model WardManagementSystem.Data.Models.ViewModels.UserViewModel
@{
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}
@if (Model != null)
{
    <style>
        body {
            background-image: url('/snake_icon.png');
            background-size: auto;
            background-repeat: no-repeat;
            background-position: center;
        }
        .card {
            margin-bottom: 20px;
        }

        .card-title {
            font-size: 1.5rem;
        }

        .button-container button {
            margin-right: 10px;
            margin-bottom: 10px;
        }

        .container {
            display: flex;
            align-items: center;
            padding: 20px;
            height: 90vh;
        }
    </style>
    <form asp-action="UpdateEmployee" method="post">
        <div class="container">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Employee Details</h2>
                    </div>
                    <input asp-for="UserID" type="hidden" class="form-control" readonly />
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="FirstName"></label>
                                    <input asp-for="FirstName" type="text" class="form-control" readonly />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="LastName"></label>
                                    <input asp-for="LastName" type="text" class="form-control" readonly />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Role"></label>
                                    <input asp-for="Role" type="text" class="form-control" readonly />
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="ContactNumber"></label>
                                    <input asp-for="ContactNumber" type="text" class="form-control" />
                                    <span asp-validation-for="ContactNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" type="text" class="form-control" readonly/>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        <hr />
                            <div class="col-md-12">
                                <div class="button-container">

                                    <div class="button-container">
                                        <button class="btn btn-outline-primary" type="submit">Save</button>
                                    </div>

                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <h1>Failed to load Model</h1>
}