@model IEnumerable<WardManagementSystem.Data.Models.Domain.Allergy>
@{
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}
<style>
    .container {
        display: flex;
        align-items: flex-start;
        height: 90vh;
        background-image: url('/snake_icon.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        flex-wrap: wrap;
    }

    .card {
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        justify-content: space-evenly;
        flex: 1 1 calc(33% - 20px);
    }

    .update-form {
        display: none;
        margin-top: 20px;
        padding: 20px;
        border: 1px solid black;
        border-radius: 5px;
        width: 100%;
    }

        .update-form div {
            margin-bottom: 10px;
        }

        .update-form label {
            display: block;
            margin-bottom: 5px;
        }

    .AddForm {
        display: none;
        margin-top: 20px;
        padding: 20px;
        border: 1px solid black;
        border-radius: 5px;
        width: 100%;
    }

        .AddForm div {
            margin-bottom: 10px;
        }

        .AddForm label {
            display: block;
            margin-bottom: 5px;
        }
</style>
<body>
    @if (TempData["msg"] != null)



    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <h1>Manage Allergies</h1>
    <hr />
    <a class="btn btn-outline-primary" onclick="showAddForm()">Add Allergy</a>
    <div class="container">

        @foreach (var item in Model)

        {
            <div class="card">
                <div class="card-title">
                    <h2>@item.AllergyName</h2>
                    <input type="hidden" name="Id" value="@item.AllergyID" />
                    <button class="btn btn-outline-secondary" type="submit" onclick="showUpdateForm('@item.AllergyID','@item.AllergyName')">Edit</button>

                    <!-- Delete Confirmation Modal -->
                    <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete this Allergy?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <form id="deleteAllergyForm" asp-action="DeleteAllergy" method="post">
                                        <input type="hidden" name="Id" id="allergyId" />
                                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <form>
                        <input type="hidden" name="Id" value="@item.AllergyID" />
                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal" onclick="setAllergyId('@item.AllergyID')">Delete</button>
                    </form>

                </div>
            </div>
        }
        <!--Update Form Code-->
        <div class="update-form" id="updateForm" style="display:none;">
            <h1>Update Allergy</h1>
            <form method="post" asp-action="UpdateAllergy">

                <label for="AllergyID">Allergy ID:</label>
                <input type="number" id="AllergyID" name="AllergyID" required readonly>

                <label for="AllergyName">Allergy Name:</label>
                <input type="text" id="AllergyName" name="AllergyName" required>


                <div class="button-container">
                    <button class="btn btn-outline-primary" type="submit">Update Name</button>
                </div>
            </form>
            <div class="button-container">
                <button class="btn btn-outline-primary" onclick="HideUpdateForm()" type="submit">Hide</button>
            </div>
        </div>
        <!--Add Form Code-->
        <div class="AddForm" id="AddForm" style="display:none;">
            <h1>Add Allergy</h1>
            <form method="post" asp-action="AddAllergy">

                <label for="AllergyName">Allergy Name:</label>
                <input type="text" id="AllergyName" name="AllergyName" required>

                <div class="button-container">
                    <button class="btn btn-outline-primary" type="submit">Add Allergy</button>
                </div>
                <div class="button-container">
                    <button class="btn btn-outline-primary" onclick="HideAddForm()" type="submit">Hide</button>
                </div>
            </form>
        </div>
    </div>

</body>
<script>

    function showUpdateForm(AllergyID, AllergyName) {

        //shows the form
        var updateForm = document.getElementById("updateForm");
        updateForm.style.display = "block";


        var AllergyIDInput = document.getElementById("AllergyID");
        AllergyIDInput.value = AllergyID;

        var AllergyNameInput = document.getElementById("AllergyName");
        AllergyNameInput.value = AllergyName;

    }
    function showAddForm() {
        //shows the form
        var updateForm = document.getElementById("AddForm");
        AddForm.style.display = "block";
    }
    function HideAddForm() {
        var updateForm = document.getElementById("AddForm");
        AddForm.style.display = "none";
    }
    function HideUpdateForm() {
        var updateForm = document.getElementById("updateForm");
        updateForm.style.display = "none";
    }
    function setAllergyId(allergyId) {
        document.getElementById('allergyId').value = allergyId;
    }
</script>