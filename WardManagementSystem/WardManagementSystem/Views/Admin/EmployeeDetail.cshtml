@model WardManagementSystem.Data.Models.ViewModels.UserViewModel
@{
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}
@if (Model != null)



{
    <style>
        .card {
            margin-bottom: 20px;
        }

        .card-title {
            font-size: 1.5rem;
        }

        .button-container button {
            margin-right: 10px;
            margin-bottom: 10px;
        }

        .container {
            display: flex;
            align-items: center;
            padding: 20px;
            background-image: url('~/snake_icon.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            height: 90vh;
        }
    </style>
    <div class="container">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Employee Details</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="FirstName">First Name:</label>
                                <input asp-for="FirstName" type="text" class="form-control" id="FirstName" value="@Model.FirstName" readonly>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="LastName">Last Name:</label>
                                <input asp-for="LastName" type="text" class="form-control" id="LastName" value="@Model.LastName" readonly>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Role">Role:</label>
                                <input asp-for="Role" type="text" class="form-control" id="Role" value="@Model.Role" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="ContactNumber">Contact Number:</label>
                                <input asp-for="ContactNumber" type="text" class="form-control" id="ContactNumber" value="@Model.ContactNumber" readonly>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Email">Email:</label>
                                <input asp-for="Email" type="text" class="form-control" id="Email" value="@Model.Email" readonly>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                            <div class="button-container">

                                <form asp-action="UpdateEmployee" method="get">
                                    <input asp-for="UserID" type="hidden" name="Id" value="@Model.UserID" />
                                    <button class="btn btn-outline-secondary" type="submit">Edit</button>
                                </form>

                                <!-- Delete Confirmation Modal -->
                                <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to delete this User?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form id="deleteUserForm" asp-action="DeleteEmployee" method="post">
                                                    <input type="hidden" name="Id" id="userID" />
                                                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <form>
                                    <input type="hidden" name="Id" value="@Model.UserID" />
                                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal" onclick="setId('@Model.UserID')">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



else



{
    <h1>Failed to load Model</h1>
}
<script>
        function setId(userID) {
        document.getElementById('userID').value = userID;
    }
</script>