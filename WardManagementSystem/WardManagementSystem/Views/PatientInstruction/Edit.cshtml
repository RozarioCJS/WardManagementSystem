@model WardManagementSystem.Data.Models.Domain.Patient_Instruction
@{
    Layout = "~/Views/Shared/_LayoutDoctor.cshtml";
}
@{
    ViewData["Title"] = "Edit Instruction";
}
<style>
    .card {
        margin-bottom: 20px;
    }

    .card-title {
        font-size: 1.5rem;
    }

    .button-container button {
        margin-right: 10px;
        margin-bottom: 10px;
    }

    body {
        background-image: url('/snake_icon.png');
        /* background-size: cover; */
        background-repeat: no-repeat;
        background-position: right;
    }
    /* .container {
        display: flex;
        align-items: center;
        padding: 20px;
        background-image: url('~/snake_icon.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        height: 100vh;
    } */

    a {
        color: white;
        text-decoration: none;
    }

    a:hover{
        color: white;
    }
</style>
<h1>Patient Instructions</h1>

<button type="button" class="btn btn-primary btn-sm"><a asp-action="Add">Create New Instruction</a></button>
<button type="button" class="btn btn-primary btn-sm"><a asp-action="DisplayAll">View All Patient Instructions</a></button>

<br />
<hr />

<body>
    <form asp-action="Edit">
        <div class="container">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Edit Instruction</h2>
                    </div>
                    <input asp-for="PatientInstructionID" type="hidden" class="form-control" readonly />
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Patient Name</label>
                                    @Html.DropDownList("PatientFileID", (SelectList)@ViewBag.SelectList, "-select-", htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Instruction" class="control-label"></label>
                                    @Html.TextArea("Instruction", new { rows = 5, cols = 40 })
                                    <span asp-validation-for="Instruction" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-4"></div>
                            <div class="col-md-4">
                                <div class="button-container">
                                    <input type="submit" value="Edit" class="btn btn-primary" />
                                </div>
                            </div>
                            <div class="col-md-4"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>

<div>
    <a asp-action="DisplayAll">Back to List</a>
</div>