@model WardManagementSystem.Data.Models.Domain.Beds

@{
    Layout = "~/Views/Shared/_LayoutWardAdmin.cshtml";
}

<h2>Update Bed</h2>

<form asp-action="UpdateBeds" method="post">
    <input type="hidden" asp-for="BedId" />

    <div class="form-group">
        <label asp-for="PatientId"></label>
        <input asp-for="PatientId" class="form-control" />
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WardId"></label>
        <input asp-for="WardId" class="form-control" />
        <span asp-validation-for="WardId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control">
            <option value="true">Occupied</option>
            <option value="false">Available</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>

