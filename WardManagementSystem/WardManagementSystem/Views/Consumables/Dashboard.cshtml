@model WardManagementSystem.Data.Models.ViewModels.ConsumablesDashboardViewModel
@{
    Layout = "~/Views/Shared/_layoutConsumables.cshtml";
}

<style>
    body{
        background-image: url('/snake_icon.png');
        background-size: auto;
        background-repeat: no-repeat;
        background-position: right;
    }
    .card {
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        justify-content: space-evenly;
        flex: 1 1 200px;
        margin: 10px;
    }

    .latest-orders {
        width: 100%;
        margin-top: 20px;
    }
</style>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <h1>Dashboard</h1>
    <hr />

    <div class="container">
        @foreach (var item in Model.ConWards)
        {
            <div class="card">
                <div class="card-title  clickable-row" data-href="@Url.Action("Details", "Consumables", new { Id = item.WardID })">
                    <h2>@item.WardName</h2>
                </div>
            </div>
        }

        <div class="latest-orders">
            <h2>Latest Purchase Orders</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Supplier Name</th>
                        <th>Manager Last Name</th>
                        <th>Consumable Name</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.LateOrder)
                    {
                        <tr>
                            <td>@item.SupplierName</td>
                            <td>@item.LastName</td>
                            <td>@item.ConsumableName</td>
                            <td>@item.Quantity</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>