<h2>All Patients</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Gender</th>
            <th>AllergyName</th>
            <th>Contact Number</th>
            <th>Email</th>
            <th>Address1</th>
            <th>Address2</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.PatientFullName</td>
                <td>@patient.Gender</td>
                <td>@patient.AllergyName</td>
                <td>@patient.ContactNumber</td>
                <td>@patient.Email</td>
                <td>@patient.Address1</td>
                <td>@patient.Address2</td>
                <td>
                    <a asp-action="GetPatient" asp-route-id="@patient.PatientID" class="btn btn-primary">Edit</a>
                    <button type="button" class="btn btn-danger"
                            data-toggle="modal"
                            data-target="#deleteModal-@patient.PatientID">
                        Delete
                    </button>


                    <div class="modal fade" id="deleteModal-@patient.PatientID" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete this patient?
                                </div>
                                <div class="modal-footer">
                                    <form asp-action="DeletePatient" asp-route-id="@patient.PatientID" method="post">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


