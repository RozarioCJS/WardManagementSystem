@model WardManagementSystem.Data.Models.Domain.Schedule
@{
    Layout = "~/Views/Shared/_LayoutDoctor.cshtml";
}
@{
    ViewData["Title"] = "Add";
}

<style>
    .card {
        margin-bottom: 20px;
    }

    .card-title {
        font-size: 1.5rem;
    }

    .button-container button {
        margin-right: 10px;
        margin-bottom: 10px;
    }

    body {
        background-image: url('/snake_icon.png');
        /* background-size: cover; */
        background-repeat: no-repeat;
        background-position: right;
    }
    /* .container {
        display: flex;
        align-items: center;
        padding: 20px;
        background-image: url('~/snake_icon.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        height: 100vh;
    } */

    a {
        color: white;
        text-decoration: none;
    }

    a:hover {
       color: white;
    }
</style>
<h1>Patient Schedules</h1>

<button type="button" class="btn btn-primary btn-sm"><a asp-action="Add">Create New Schedule</a></button>
<button type="button" class="btn btn-primary btn-sm"><a asp-action="DisplayAll">View All Schedules</a></button>

<br />
<hr />

<body>
    <form asp-action="Add">
        <div class="container">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title">Create Schedule</h2>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Patient Name</label>
                                    @Html.DropDownList("PatientID", (SelectList)@ViewBag.SelectList, "-select-", htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Date" class="control-label"></label>
                                    <input type="Date" asp-for="Date" class="form-control" required/>
                                    <span asp-validation-for="Date" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Time" class="control-label"></label>
                                    <select asp-for="Time" class="form-control" required>
                                        <option>08:30</option>
                                        <option>09:00</option>
                                        <option>09:30</option>
                                        <option>10:00</option>
                                        <option>10:30</option>
                                        <option>11:00</option>
                                        <option>11:30</option>
                                        <option>12:00</option>
                                        <option>12:30</option>
                                        <option>13:00</option>
                                        <option>13:30</option>
                                        <option>14:00</option>
                                        <option>14:30</option>
                                        <option>15:00</option>
                                        <option>15:30</option>
                                    </select>
                                    <span asp-validation-for="Time" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-4"></div>
                            <div class="col-md-4">
                                <div class="button-container">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>
                            <div class="col-md-4"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
