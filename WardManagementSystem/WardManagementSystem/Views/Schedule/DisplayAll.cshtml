@using WardManagementSystem.Data.Models.ViewModels
@{
    Layout = "~/Views/Shared/_LayoutDoctor.cshtml";
}
@{
    ViewData["Title"] = "DisplayAll";
}
@{
    IEnumerable<ScheduleDisplayViewModel> scheduleDisplayViewModels = ViewData["ScheduleDisplayViewModel"] as IEnumerable<ScheduleDisplayViewModel>;
    IEnumerable<PatientFullNameViewModel> patientComboViewModels = ViewData["PatientComboViewModel"] as IEnumerable<PatientFullNameViewModel>;
}

<style>
    body {
        background-image: url('/snake_icon.png');
        /* background-size: cover; */
        background-repeat: no-repeat;
        background-position: right;
    }
    a.link {
        color: white;
        text-decoration: none;
    }

    a:hover.link {
        color: white;
    }
</style>
<h1>Patient Schedules</h1>

<button type="button" class="btn btn-primary btn-sm"><a class="link" asp-action="Add">Create New Schedule</a></button>
<button type="button" class="btn btn-primary btn-sm"><a class="link" asp-action="DisplayAll">View All Schedules</a></button>
<hr />

<body>
    @* Alert letting the user know whether the record was inserted or not *@
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* Drop down list that displays patient name but has patientID as its value *@
    @using (Html.BeginForm("DisplayAll", "Schedule", FormMethod.Get))
    {
        <label>Select Patient:</label>
        @Html.DropDownList("PatientID", (SelectList)@ViewBag.SelectList, "-select-", htmlAttributes: new { @class = "form-control" })
        <input type="submit" value="Search" class="btn btn-primary" />
    }

    @if (scheduleDisplayViewModels != null && scheduleDisplayViewModels.Any())
    {


        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Patient Full Name</th>
                    <th scope="col">Date</th>
                    <th scope="col">Time</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (ScheduleDisplayViewModel scheduleDisplayViewModel in scheduleDisplayViewModels)
                {
                    <tr>
                        <td>@scheduleDisplayViewModel.PatientFullName</td>
                        <td>
                            @scheduleDisplayViewModel.Date.ToString("dd/MM/yyyy")
                        </td>
                        <td>@scheduleDisplayViewModel.Time</td>
                        <td>
                            <!--Edit button-->
                            <form asp-action="Edit" method="get">
                                <input asp-for="@scheduleDisplayViewModel.ScheduleID" type="hidden" name="Id" value="@scheduleDisplayViewModel.ScheduleID" />
                                <button class="btn btn-outline-secondary" type="submit">Edit</button>
                            </form>

                            <!-- Delete Confirmation Modal -->
                            <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete this Schedule?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <form id="deleteScheduleForm" asp-action="Delete" method="post">
                                                <input type="hidden" name="Id" id="scheduleID" />
                                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <form>
                                <input type="hidden" name="Id" value="@scheduleDisplayViewModel.ScheduleID" />
                                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal" onclick="setId('@scheduleDisplayViewModel.ScheduleID')">Delete</button>
                            </form>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p>Please select a recored or there are no records available for the selected patient</p>
    }

</body>

<script>
    function setId(scheduleID) {
        document.getElementById('scheduleID').value = scheduleID;
    }
</script>