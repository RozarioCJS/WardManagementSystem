<!--Allows the HttpContext to be used within the layout view-->
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor;
@{
    string LastName = HttpContextAccessor.HttpContext.Session.GetString("LastName");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WardManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WardManagementSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid d-flex flex-columnx vh-100">
        <div class="row flex-grow-1">
            <div class="bg-dark col-auto col-md-2 d-flex flex-column">
                <ul class="nav nav-pills flex-column mt-4">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Schedule" asp-action="Dashboard">
                            <i class=""></i><span class="fs-4 d-none d-sm-inline">Dashboard</span>
                        </a>
                    </li>
                    <hr />
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="PatientFile" asp-action="DisplayAll">
                            <i class=""></i><span class="fs-4 d-none d-sm-inline">View Patient Folder</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="PatientInstruction" asp-action="Add">
                            <i class=""></i><span class="fs-4 d-none d-sm-inline">Write Patient Instructions</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Script" asp-action="Add">
                            <i class=""></i><span class="fs-4 d-none d-sm-inline">Prescribe Medication</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Schedule" asp-action="Add">
                            <i class=""></i><span class="fs-4 d-none d-sm-inline">Schedule Visit</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Visit" asp-action="Add">
                            <i class=""></i><span class="fs-4 d-none d-sm-inline">Visit Notes</span>
                        </a>
                    </li>
                
                <hr />
                 class="nav nav-pills flex-column mt-4"">
                    <li class="nav-item">
                        <p style="color: white;">Welcome, Dr. @LastName</p>     <!--Displays doctors name throughout the different views of subsystem-->

                        <span id="datetime" style="color: white; font-size: 10px;"></span>

                        <script>
                            // create a function to update the date and time
                            function updateDateTime() {
                                const now = new Date();
                                const currentDateTime = now.toLocaleString();       //get the current date and time
                                document.querySelector('#datetime').textContent = currentDateTime;  // update the textContent property of the span element
                            }
                            // call the updateDateTime function
                            setInterval(updateDateTime, 100);
                        </script>
                    </li>
                </ul>
            </div>

            <div class="col">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WardManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>